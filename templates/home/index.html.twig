                        <button><a href="{{ path('app_projet_new') }}">Add New Project</a></button>
                    {% endif %}
                </div>
            </div>

            {% if projets %}
                {% for projet in projets %}
                    <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                        <div class="team-wrapper">
                            {% if projet.getPictureUrl() %}
                                <div class="team-img">
                                    <img src="{{ projet.getPictureUrl() }}" class="img-fluid" alt="Project Image">
                                </div>
                            {% endif %}
                            <div class="team-content">
                                <h3>{{ projet.getLibelleP() }}</h3>
                                <p>Secteur: {{ projet.getSecteurP() }}</p>
                                <p>Cout Fixe: {{ projet.getCoutFixe() }}</p>
                                <p>Cout Variable: {{ projet.getCoutVar() }}</p>
                                <p>Durée: {{ projet.getDureeP() }}</p>
                                {% if projet.getConvention() %}
                                    <p>Convention associée: {{ projet.getConvention().getMat().getEmail() }}</p>
                                    <button disabled>Convention Signed</button>
                                {% else %}
                                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                        <button><a href="{{ path('app_convention_new', {'projectId': projet.getId()}) }}">Sign Convention</a></button>
                                    {% else %}
                                        <button><a href="{{ path('app_login') }}">Sign Convention</a></button>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
